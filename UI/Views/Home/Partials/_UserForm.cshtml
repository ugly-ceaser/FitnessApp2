@model DataTransferLayer.UserDataTransfer
<div class="input-group mb-3">
    @Html.TextBoxFor(data => data.Username, new { @class = "form-control", @placeholder = "Username" })
    <div class="m-2">
        @Html.ValidationMessageFor(data => data.Username)
    </div>


</div>

<div class="input-group mb-3">
    @Html.PasswordFor(data => data.Password, new { @class = "form-control", @placeholder = "Password" })
    <div class="m-2">
        @Html.ValidationMessageFor(data => data.Password)

    </div>


</div>


<div class="row">

    <!-- /.col -->
    <div class="col-4">
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </div>
    <!-- /.col -->
</div>
